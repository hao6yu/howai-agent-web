# Minimal Dockerfile to save space
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Install ALL dependencies (dev + production needed for build)
RUN npm ci

# Copy all source files including .env.local
COPY . .

# Set telemetry disabled
ENV NEXT_TELEMETRY_DISABLED=1

# Build the application
RUN npm run build

# Clean up to save space
RUN npm ci --only=production && npm cache clean --force

EXPOSE 3000

ENV NODE_ENV=production
ENV PORT=3000

# Run as root for now (not ideal for production but saves space)
CMD ["npm", "start"]
